@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Edit</h2>

<h4>Edit this flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    <p>@Html.LabelFor(model => model.Name)</p>
    @Html.EditorFor(model => model.Name)

    <p>@Html.Label("Select treat")</p>
    @Html.DropDownList("TreatId")

    <input type="submit" value="Save" class= "btn btn-primary"/>
}

