    </form> *@


@using (Html.BeginForm("Index", "Treats", FormMethod.Get, new { @class= "form-inline my-2 my-lg-0" }))
      {
        <input class="form-control mr-sm-2" type="text" placeholder="Treat Description">
        <button class="btn my-2 my-sm-0" type="submit">Search Treats</button>
      }      




  </div>
</nav>
<br>
  <div class="container">

    @RenderBody()
</div>
