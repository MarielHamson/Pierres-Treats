<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierre's Treat Tracker</title>
    <link rel='stylesheet' href='~/css/bootstrap.min.css'>
    <link rel="stylesheet" href='~/css/styles.css'>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Pierre's Treats</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor02">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" }) <span class="sr-only">(current)</span>
      </li>
      <li class="nav-item">
        @Html.ActionLink("See all flavors", "Index", "Flavors", null, new { @class = "nav-link" })</a>
      </li>
      <li class="nav-item">
      @Html.ActionLink("See all treats", "Index", "Treats", null,  new { @class = "nav-link" })
      </li>
      <li class="nav-item">
      @Html.ActionLink("Add new flavor", "Create", "Flavors", null, new { @class = "nav-link" })
      </li>
      <li class="nav-item">
      @Html.ActionLink("Add new treat", "Create", "Treats", null, new { @class = "nav-link" })
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account Info</a>
        <div class="dropdown-menu">
          @Html.ActionLink("Log in", "Login", "Account", null, new { @class = "dropdown-item" })
          @Html.ActionLink("Create an account", "Register", "Account", null, new { @class = "dropdown-item" })
          <div class="dropdown-divider"></div>
          @using (Html.BeginForm("LogOff", "Account"))
          {
            <input type="submit" class="btn btn-default dropdown-item" value="Log out" />
          }
        </div>
      </li>
    </ul>
